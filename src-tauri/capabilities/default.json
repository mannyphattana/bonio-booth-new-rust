{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:event:default",
    "core:event:allow-listen",
    "core:event:allow-unlisten",
    "opener:default",
    "shell:allow-execute",
    "shell:allow-open",
    "shell:allow-spawn",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:scope",
    "dialog:default",
    "updater:default",
    "process:allow-restart",
    "process:allow-exit",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://api-booth.boniolabs.com/**" },
        { "url": "https://sgp1.digitaloceanspaces.com/**" },
        { "url": "https://**" }
      ]
    }
  ]
}
