{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Bonio Booth",
  "version": "0.2.0",
  "identifier": "com.boniolabs.booth",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Bonio Booth",
        "width": 1440,
        "height": 1080,
        "fullscreen": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' https: data: blob:; media-src 'self' blob:; connect-src 'self' https://api-booth.boniolabs.com https://sgp1.digitaloceanspaces.com https://api.qrserver.com; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../EDSDK/**",
      "../filters/*"
    ],
    "windows": {
      "nsis": {
        "installMode": "both",
        "displayLanguageSelector": false
      }
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "updater": {
      "endpoints": [
        "https://github.com/mannyphattana/bonio-booth-new-rust/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENCOEI1NjlFREJBNTZDMzgKUldRNGJLWGJubGFMeXpTcE4rMUNqSXZBeHhEakN5b1NobzJPUTNIVXFqQU1Ebzh5YVIyRVRvdTkK"
    }
  }
}
